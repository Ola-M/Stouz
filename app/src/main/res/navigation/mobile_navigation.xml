<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.stouz.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.example.stouz.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/navigation_promotions"
        android:name="com.example.stouz.ui.promotions.PromotionsFragment"
        android:label="@string/title_promotions"
        tools:layout="@layout/fragment_promotions" />

    <fragment
        android:id="@+id/navigation_restaurant_detail"
        android:name="com.example.stouz.ui.restaurantDetails.RestaurantDetailFragment"
        android:label="@string/title_restaurant_detail"
        tools:layout="@layout/fragment_restaurant_detail" >
        <argument
            android:name="restaurant"
            app:argType="com.example.stouz.Restaurant" />
    </fragment>
</navigation>
